<mvc:View
    xmlns="sap.m"
    xmlns:cmm="sap.ui.commons"
    controllerName="pe.idc.web.test.springmvc.controller.SalesOrder"
    xmlns:mvc="sap.ui.core.mvc">
    <Page showHeader="false">
        <content>
            <HBox>
                <Button text="Show Popup"
                        press="showPopup">
                </Button>
            </HBox>                 
            <Table id="tblSalesOrder"
                   inset="false"
                   items="{
			path: 'soModel>/rows'
		}">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Sales Order" level="H2"/>
                        <ToolbarSpacer/>
                        <SearchField
                            id="searchField"
                            tooltip="Search filter"
                            search="onSearch"
                            width="auto">
                        </SearchField>
                    </Toolbar>
                </headerToolbar>
                <infoToolbar>
                    <Toolbar active="ture">
                        <Label text="List of Sales Orders"/>
                    </Toolbar>
                </infoToolbar>
                <columns>
                    <Column
                        width="4em">
                        <Text text="Id" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="End">
                        <Text text="Date" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Center">
                        <Text text="Customer" />
                    </Column>
                    <Column
                        hAlign="End">
                        <Text text="Taxes" />
                    </Column>
                    <Column
                        hAlign="End">
                        <Text text="Total" />
                    </Column>            
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="d {soModel>id}" />
                            <Text text="{parts: [{path: 'soModel>date'}], formatter: '.formatter.formatDate'}" />
                            <Text text="{soModel>customer}" />
                            <Text text="{soModel>taxes}" />
                            <Text text="{soModel>total}" />                                                            
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>