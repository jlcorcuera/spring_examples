<mvc:View
    controllerName="pe.idc.web.test.springmvc.controller.Login"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    height="100%">    
    <FlexBox
        height="100%"
        direction="Column"
        alignItems="Center"
        justifyContent="Center">
        <items>
            <Image
                src="./images/logo.png"
                densityAware="false"
                class="sapUiTinyMargin"/>
            <Input id="inpLogin" editable="true" placeholder="{i18n>login.label.login}" 
                   maxLength="20" />
            <Input id="inpPWD" type="Password" editable="true" 
                   placeholder="{i18n>login.label.password}" maxLength="20"
            />
            <Button id="bntLogin" text="{i18n>login.button.login}" 
                    width="150px"
                    press="actLogin" class="sapUiTinyMargin chalaButton"/>
            <Link id="forgotLink" text="{i18n>login.link.forgotPassword}" class="sapUiTinyMargin"/>
        </items>
    </FlexBox>    
</mvc:View>