<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core"
    xmlns:cmm="sap.ui.commons">
    <Dialog
        id="testDialog"
        xmlns="sap.m" 
        xmlns:l="sap.ui.layout" 
        xmlns:dnd="sap.ui.core.dnd"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns:ta="sap.ui.table"
        title="Test Dialog"
        stretch="true"
        draggable = "true">
        <content>
            <Label id="lblDialog" text="Label inside dialog popup" design="Bold"/>
        </content>
        <beginButton>
            <Button id="aceptarBtn" text="Aceptar" press="onAcceptDialog" />
        </beginButton>
        <endButton>
            <Button text="Cerrar" press="onCloseDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>