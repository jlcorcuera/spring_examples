<mvc:View height="100%"
          controllerName="pe.idc.web.test.springmvc.controller.Main"  
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:tnt="sap.tnt">
    <tnt:ToolPage
        id="app"
        class="sapUiDemoToolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Button
                    id="sideNavigationToggleButton"
                    icon="sap-icon://menu2"
                    type="Transparent"
                    press="onSideNavButtonPress"
                    tooltip="{i18n>navigationToggleButtonTooltip}">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>                   
                <ToolbarSpacer/>
                <Title
                    text="{i18n>appTitle}"
                    level="H2"/>
                <ToolbarSpacer/>
                <Button
                    id="userButton"
                    text="{i18n>userName}"
                    type="Transparent"
                    press="onUserNamePress">
                    <layoutData>
                        <OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
                    </layoutData>
                </Button>
            </tnt:ToolHeader>
        </tnt:header>        
        <tnt:sideContent>          
            <tnt:SideNavigation
                id="sideNavigation"
                expanded="true"
                itemSelect="onItemSelect">      
                                          
                <tnt:NavigationList
                    id="navigationList"
                    items="{
						path: 'side>/navigation',
						templateShareable: false
					}">
                    <tnt:NavigationListItem
                        text="{side>title}"
                        icon="{side>icon}"
                        expanded="{side>expanded}"
                        items="{
							path: 'side>items',
							templateShareable: false
						}"
                        key="{side>key}">
                        <tnt:NavigationListItem
                            text="{side>title}"
                            key="{side>key}">
                        </tnt:NavigationListItem>
                    </tnt:NavigationListItem>
                </tnt:NavigationList>
                <tnt:fixedItem>
                    <tnt:NavigationList
                        items="{
							path: 'side>/fixedNavigation',
							templateShareable: false
						}">
                        <tnt:NavigationListItem
                            text="{side>title}"
                            icon="{side>icon}"
                            key="{side>key}">
                        </tnt:NavigationListItem>
                    </tnt:NavigationList>
                </tnt:fixedItem>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <App id="mainContents"/>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>